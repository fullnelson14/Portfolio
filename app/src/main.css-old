* {
    margin: 0;
}

h3,
a,
p,
h1 {
    font-family: 'Ubuntu Condensed', sans-serif;
}

nav {
    background-color: rgba(155, 0, 0, 0.8);
    text-align: right;
    position: fixed;
    width: 100%;
    /*height: 2rem;*/
    border-bottom: 1px solid black;
    margin: 0;
}

#logo {
    float: left;
    font-size: 1.5rem;
    padding-left: 20px;
    /*border: black 2px solid;*/
}

nav a {
    padding: 0 15px 0 5px;
    text-decoration: none;
    display: inline-block;
    height: 100%;
    /*border: black 2px solid;*/
    font-size: 1.5rem;
    color: black;
    transition-duration: 750ms;
}

nav a:hover {
    background-color: #e0812f;
    padding-bottom: 4px;
    border-left: 2px solid black;
}

.content {
    background-color: #84705f;
}

.home {
    background-image: url("http://whatson.ae/dubai/wp-content/uploads/2017/05/skyline-sunset-featured.jpg");
    background-size: cover;
    text-align: center;
    height: 450px;
}

#first-p {
    padding-top: 100px;
    font-size: 4rem;
}

.button-container {
    padding-top: 160px;
}

.button {
    text-decoration: none;
    border: 4px solid black;
    border-radius: 10px;
    background-color: #84705f;
    margin: 0 10px;
    padding: 5px 7px;
    color: black;
    transition-duration: 500ms;
    font-size: 17px;
}

.button:hover {
    background-color: white;
    border: 3px solid grey;
    margin: 0 11px;
}

.about-me {
    border-top: 2px solid black;
}

.portfolio {
    text-align: center;
}

.port-img {
    height: 12rem;
    border-radius: 10px;
    border: 2px black solid;
}

@media screen and (max-width: 1125px) {
    .port-img {
        height: 10rem;
    }
}

@media screen and (max-width: 960px) {
    .port-img {
        height: 8rem;
    }
}

@media screen and (max-width: 800px) {
    .port-img {
        height: 6rem;
    }
}

.port-extra {
    padding: 10px 0;
}

.card {
    padding-left: 100px;
    padding-top: 30px;
}

.email {
    display: inline;
    position: relative;
    left: 100px;
    bottom: 120px;
    font-size: 17px;
    font-weight: bold;
}

.img-container {
    display: inline-block;
    background-color: red;
    border-radius: 10px;
    padding: 5px;
    text-align: center;
    border: 2px solid gray;
    transition-duration: 500ms;
}

.img-container:hover {
    border: 2px solid black;
}

.portfolio h1 {
    text-decoration: underline;
    margin-bottom: 10px;
}

footer {
    background-color: #333;
    border-top: 3px solid black;
}

footer p {
    text-align: center;
    padding-bottom: 5px;
}

.bottom-links {
    text-align: right;
    padding-top: 20px;
}

.bottom-links a {
    padding-right: 20px;
    text-decoration: none;
    color: #000;
    border-top: 1px solid black;
    transition-duration: 500ms;
}

.bottom-links a:hover {
    color: #FFF;
}